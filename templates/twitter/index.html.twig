{% extends 'base.html.twig' %}
{% block title %}Twitter Widget Example {% endblock %}
{% set scripts %}
    {{ encore_entry_script_tags('twitterWidget') }}
    <script>
        TwitterWidget.init('twitter_feed_widget', {url: "{{ url('data_parse', {username: "neiltyson"}) }}"});
    </script>
{% endset %}
{% set container %}
    <div id="twitter_feed_widget"></div>
{% endset %}
{% block body %}
    <p>Example: <a href="{{ path('data_parse', {username: "neiltyson"}) }}">{{ path('data_parse', {username: "neiltyson"}) }}</a> </p>

    <h2>Usage</h2>
    <p>Place following code at the end of your &lt;BODY&gt; tag:</p>
    <pre>{{ scripts|escape }}</pre>
    <p>Add followind code anywhere on your site:</p>
    <pre>{{ container|escape }}</pre>

    <h2>Example</h2>
    {{ container|raw }}
{% endblock %}
{% block javascripts %}
    {{ scripts|raw }}
{% endblock %}